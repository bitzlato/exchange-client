{
  "compilerOptions": {
    "alwaysStrict": true,
    "sourceMap": true,
    "target": "es6",
    "lib": [
      "es2017",
      "es2015",
      "es6"
    ],
    "module": "commonjs",
    "outDir": "./",
    "strict": true,
    "removeComments": false,
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "stripInternal": true,
    "noFallthroughCasesInSwitch": true,
    "noEmitOnError": true
  },
  "include": [
    "**.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
